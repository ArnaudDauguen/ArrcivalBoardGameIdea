<Window x:Class="BoardGameIdea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardGameIdea"
        mc:Ignorable="d"
        Title="Board game idea" Height="900" Width="720" Background="#FFAAAAAA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="700" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="800" x:Name="MainGame">
            
        </Grid>

        <TextBox Grid.Row="1" HorizontalAlignment="Center" Background="Transparent" x:Name="ScoreGame" FontSize="20">White : 0 / Black : 0</TextBox>
        <Button Grid.Row="2" Width="100" x:Name="ResetButton" Click="Reset">Reset</Button>
        <Button Grid.Row="3" Width="100" x:Name="PatternButton" Click="ShowPatterns">Patterns</Button>
    </Grid>
    
</Window>
